<div class="page-header">
  <h3><%= @user.username %></h3>
</div>

<% @photos.each do |photo| %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= photo.caption %>
        </h3>
      </div>

      <div class="panel-body">
        <img src="<%= photo.image %>" width=480>
      </div>
    </div>
  </div>
</div>
<% end %>
